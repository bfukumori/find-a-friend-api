{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 20",
  "_version": "20.1.0",

  "compilerOptions": {
    "lib": ["es2023"],
    "module": "node16",
    "target": "es2022",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",

    "baseUrl": ".",
    "paths": {
      "@repositories/*": ["src/@core/domain/repositories/*"],
      "@entities/*": ["src/@core/domain/entities/*"],
      "@use-cases/*": ["src/@core/domain/use-cases/*"],
      "@constants/*": ["src/@core/domain/constants/*"],
      "@errors/*": ["src/@core/domain/errors/*"],
      "@utils/*": ["src/@core/domain/utils/*"],
      "@controllers/*": ["src/@core/infra/controllers/*"],
      "@routes/*": ["src/@core/infra/routes/*"],
      "@factories/*": ["src/@core/infra/factories/*"]
    }
  }
}
